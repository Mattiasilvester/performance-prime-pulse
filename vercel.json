{
  "installCommand": "corepack enable && pnpm install",
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "framework": "vite",
  "devCommand": "pnpm dev",
  "functions": {
    "api/supabase-proxy.ts": { "maxDuration": 30 },
    "api/ai-chat.ts": { "maxDuration": 30 }
  },
  "rewrites": [
    { "source": "/api/supabase-proxy/(.*)", "destination": "/api/supabase-proxy" },
    { "source": "/api/ai-chat", "destination": "/api/ai-chat" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
